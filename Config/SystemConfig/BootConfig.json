{
  "SystemName": "ByenatOS",
  "Version": "0.1.0-alpha",
  "BuildNumber": "20241201",
  "BootConfig": {
    "KernelPath": "/Kernel/Core/kernel.bin",
    "InitProcess": "/SystemServices/init",
    "DefaultRunLevel": 5,
    "BootTimeout": 30,
    "SafeMode": false,
    "VerboseLogging": true
  },
  "HardwareConfig": {
    "CPUArchitecture": ["x86_64", "arm64"],
    "MinimumRAM": "4GB",
    "RecommendedRAM": "16GB",
    "StorageMinimum": "64GB",
    "GraphicsRequired": true,
    "NetworkRequired": false
  },
  "AIServicesConfig": {
    "EnabledByDefault": true,
    "AutoStartServices": [
      "PersonalAssistant",
      "SmartAutomation",
      "NaturalLanguage"
    ],
    "ModelPath": "/Config/AIModels/",
    "PrivacyMode": "LocalFirst",
    "CloudBackup": true
  },
  "SecurityConfig": {
    "EncryptionLevel": "AES-256",
    "SecureBootEnabled": true,
    "FirewallEnabled": true,
    "SandboxMode": "Strict",
    "BiometricAuth": true
  },
  "UserInterfaceConfig": {
    "DefaultTheme": "Light",
    "Language": "zh-CN",
    "Accessibility": {
      "HighContrast": false,
      "VoiceControl": true,
      "ScreenReader": false
    },
    "MultiMonitorSupport": true
  }
}